    "@types/jest": "^27.0.1",
    "chalk": "^4.1.2",
    "graphql": "^15.5.1",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
